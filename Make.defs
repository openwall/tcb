CC = gcc
INSTALL = install -p
MKDIR = mkdir

# Flag to enable -Werror on build.
WERROR =

DBGFLAG = #-ggdb
ifndef CFLAGS
CFLAGS = -O2
endif
CFLAGS += $(DBGFLAG) -I../include
CFLAGS += -Wall -Wextra
ifneq ($(WERROR),)
CFLAGS += -Werror
endif
#CFLAGS += -DFAIL_RECORD
LDFLAGS += $(DBGFLAG) -L../libs

SBINDIR = /sbin
SLIBDIR = /lib
LIBDIR = /usr/lib
LIBEXECDIR = /usr/libexec
MANDIR = /usr/man
SYSUSERSDIR = /usr/lib/sysusers.d

SHLIBMODE = 755
